{
    "extends": "../tsconfig.base.json",
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts", "**/*.test.ts"],
    "compilerOptions": {
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "outDir": "dist",
        "rootDir": "src"
    },
    "typedocOptions": {
        "entryPoints": "src/index.ts",
        "out": "docs",
        "readme": "README.md"
    }
}
